# ──────────────────────────────────────────────────────────
# Aegis Event Bus – sample environment file
# Rename to `.env` and fill in real values for local runs.
# ──────────────────────────────────────────────────────────

# ── PostgreSQL connection URLs ────────────────────────────
DATABASE_URL=postgresql+psycopg2://a0_rw_user:${DB_PW}@postgres:5432/aegis_event_bus
DATABASE_URL_RO=postgresql+psycopg2://a0_ro_user:${DB_RO_PW}@postgres:5432/aegis_event_bus

# ── Secrets injected into the Postgres container ─────────
DB_PW=CHANGE_ME_RW            # ← random strong pass for RW role
DB_RO_PW=CHANGE_ME_RO         # ← random strong pass for RO role

# ── FastAPI auth demo users (unchanged) ───────────────────
FIRST_SUPERUSER=admin@example.com
FIRST_SUPERUSER_PASSWORD=admin

# ── Other common ports - override if needed ───────────────
DB_PORT=5432
